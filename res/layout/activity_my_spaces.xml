<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:background="#404040">

	<!-- Results list -->
	<LinearLayout 
		android:id="@+id/my_spaces_layout_content" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_marginBottom="60dip">
		
		<ListView 
			android:id="@+id/my_spaces_space_list" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:cacheColorHint="#404040" />
		
	</LinearLayout>

<!-- Controls -->
	<RelativeLayout 
		android:layout_height="60dp"
		android:layout_marginTop="-60dip" 
		android:background="#888888" 
		android:layout_width="fill_parent"
		android:orientation="vertical">
		
		<!-- Horizontal line break -->
		<View android:background="#FFFFFF" android:layout_width="fill_parent"
			android:layout_height="1dip" />
			
		<RelativeLayout 
			android:id="@+id/my_spaces_layout_top"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:orientation="horizontal"
			>

			<!-- Add space button -->
			<Button android:id="@+id/my_spaces_add_button" 
				android:text="  Create Space  "
				android:onClick="addSpace" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true">
			</Button>

		</RelativeLayout>
	</RelativeLayout>
	
</LinearLayout>

