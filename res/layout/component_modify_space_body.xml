<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="vertical">

	<!-- Description -->
	<TextView android:layout_width="fill_parent"
		android:textStyle="bold" android:layout_height="wrap_content"
		android:text="Description">
	</TextView>
	<EditText android:id="@+id/modify_space_description"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:singleLine="true">
	</EditText>
	<!-- (EOF) Description -->

	<!-- Information -->
	<TextView android:paddingTop="10dp" android:layout_width="fill_parent"
		android:textStyle="bold" android:layout_height="wrap_content"
		android:text="Information">
	</TextView>
	<EditText android:id="@+id/modify_space_information"
		android:layout_width="fill_parent" android:layout_height="120dp"
		android:singleLine="false" android:gravity="top">
	</EditText>
	<!-- (EOF) Information -->

	<!-- Entities -->
	<TextView 
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:paddingTop="10dp"
		android:textStyle="bold" android:text="Entities">
	</TextView>
	<!-- Horizontal line break -->
	<View 
		android:layout_height="1dip" android:layout_width="fill_parent"
		android:padding="4dp" 
		android:background="#888888"
	/>
	<LinearLayout android:id="@+id/modify_space_entity_list"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:orientation="vertical">
		<!-- This is where the content of entities will popup -->	
	</LinearLayout>
	<!-- (EOF) Entities -->

</LinearLayout>
